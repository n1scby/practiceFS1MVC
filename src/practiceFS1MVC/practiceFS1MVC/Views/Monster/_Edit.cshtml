@model ApplicationCore.Monster

<div class="row">
    <div class="col-md-4">
        <form asp-action="@ViewData["Action"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfEyes" class="control-label"></label>
                <input asp-for="NumberOfEyes" class="form-control" />
                <span asp-validation-for="NumberOfEyes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewData["Button"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>